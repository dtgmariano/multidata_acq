<Window x:Class="MultiData_Acq.ColetaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ColetaWindow" Height="209" Width="300">
    <Grid>
        <CheckBox Name="isContinuos" Content="Continuous" HorizontalAlignment="Left" Margin="29,28,0,0" VerticalAlignment="Top" Checked="CheckBox_Checked"/>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="10,4,0,0" TextWrapping="Wrap" Text="Sampling" VerticalAlignment="Top" Width="120" />
        <TextBox Name="duration" HorizontalAlignment="Left" Height="23" Margin="29,49,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="58"/>
        <Label Content="seconds" HorizontalAlignment="Left" Margin="92,49,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Height="23" Margin="10,80,0,0" TextWrapping="Wrap" Text="Sample Data" VerticalAlignment="Top" Width="120" />
        <Label Content="Patient Name:" HorizontalAlignment="Left" Margin="29,108,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.395,0.077"/>
        <TextBox Name="pName" HorizontalAlignment="Left" Height="23" Margin="119,111,0,0" TextWrapping="Wrap" Text="Patient" VerticalAlignment="Top" Width="163"/>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="206,146,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>

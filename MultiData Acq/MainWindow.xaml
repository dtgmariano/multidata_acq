<Window x:Class="MultiData_Acq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MultiData_Acq"
        Title="MultiData Acq" Width="800" Height="600" Loaded="Window_Loaded" Closed="Window_Closed">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Boards">
                <MenuItem Header="_Detect" Click="MenuDetect_Click"/>
            </MenuItem>
            <MenuItem Header="_Coleta">
                <MenuItem Header="_Configure" Click="MenuConfColeta_Click"/>
                <MenuItem Header="_Save" Click="MenuSaveColeta_Click" />
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <TabControl Name="tabControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Grid.Row="0"/>
            <Button Content="Start" Name="controlBt" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.Row="1"/>

        </Grid>
    </DockPanel>
</Window>
